        <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-1-1">
                <div class="uk-overflow-container">
                    <div class="md-card uk-margin-medium-bottom">
                        <div class="md-card-content">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.TenKhachHang)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.TenKhachHang)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.CongTy)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.CongTy)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.SoDienThoai)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.SoDienThoai)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.Email)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.Email)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.DiaChi)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.DiaChi)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.MaLoaiKH)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.MaLoaiKH)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.NgaySinh)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.NgaySinh)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.TrangThai)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.TrangThai)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.KhachHang.TenTaiKhoan)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.KhachHang.TenTaiKhoan)
                                </dd>

                            </dl>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @*<h4>Sửa thông tin khách hàng</h4>*@
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.KhachHang.MaKhachHang)
                                    @Html.HiddenFor(model => model.KhachHang.MaLoaiKH)
                                    @Html.HiddenFor(model => model.KhachHang.CongTy)
                                    @Html.HiddenFor(model => model.KhachHang.DiaChi)
                                    @Html.HiddenFor(model => model.KhachHang.Email)
                                    @Html.HiddenFor(model => model.KhachHang.TenKhachHang)
                                    @Html.HiddenFor(model => model.KhachHang.TrangThai)
                                    @Html.HiddenFor(model => model.KhachHang.deleted)
                                   
                                    
                                    <div class="form-group">
                                            @Html.LabelFor(model => model.LoaiKhachHang.MaLoaiKH, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.LoaiKhachHang.TenLoaiKH, new SelectList(Model.DSLoaiKhachHang, "MaLoaiKH", "TenLoaiKH"), new { @class = "form-control" })
                                                @*@Html.EditorFor(model => model.KhachHang.MaLoaiKH, new { htmlAttributes = new { @class = "form-control" } })*@
                                                @*@Html.ValidationMessageFor(model => model.KhachHang.MaLoaiKH, "", new { @class = "text-danger" })*@
                                            </div>
                                    </div>
                                    @*<div class="form-group">
                                        @Html.LabelFor(model => model.KhachHang.deleted, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.KhachHang.deleted)
                                                @Html.ValidationMessageFor(model => model.KhachHang.deleted, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>*@
                                    @if (Model.KhachHang.TenTaiKhoan == null)
                                    {
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.KhachHang.TenTaiKhoan, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.TaiKhoan.TenTaiKhoan, new SelectList(Model.DSTaiKhoan, "Id", "TenTaiKhoan"), new { @class = "form-control" })
                                                @*@Html.EditorFor(model => model.KhachHang.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.KhachHang.TenTaiKhoan, "", new { @class = "text-danger" })*@
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        @Html.HiddenFor(model => model.KhachHang.TenTaiKhoan)
                                    }


                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Lưu" class="btn btn-success" />
                                        </div>
                                    </div>
                                </div>
                            }

                            <div>
                                @Html.ActionLink("<< Trở về", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>