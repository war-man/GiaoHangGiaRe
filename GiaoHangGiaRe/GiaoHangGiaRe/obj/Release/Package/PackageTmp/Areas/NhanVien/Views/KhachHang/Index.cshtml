@model IEnumerable<Models.EntityModel.KhachHang>

@{
    ViewBag.Title = "Index";
}
<div class="md-card">
    <div class="md-card-content">
        <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-1-1">
                <div class="uk-overflow-container">
                    <div class="md-card uk-margin-medium-bottom">
                        <div class="md-card-content">
                            <p>
                                @Html.ActionLink("Thêm mới", "Create",null,new {@class= "btn btn-default" })
                            </p>
                            <table id="example" class="uk-table">
                                <thead>
                                    <tr>
                                        <th>
                                            Tên khách hàng
                                        </th>
                                        <th>
                                            Công ty
                                        </th>
                                        <th>
                                            Số điện thoại
                                        </th>
                                        <th>
                                            Email
                                        </th>
                                        <th>
                                            Địa chỉ
                                        </th>  
                                        <th>
                                            @Html.DisplayNameFor(model => model.TrangThai)
                                        </th>
                                       
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenKhachHang)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CongTy)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoDienThoai)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DiaChi)
                                            </td>                                          
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TrangThai)
                                            </td>                                         
                                            <td>
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaKhachHang }) |
                                                @Html.ActionLink("Chi tiết ", "Details", new { id = item.MaKhachHang }) |
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaKhachHang }) |
                                                @Html.ActionLink("Phân loại", "PhanLoai", new { id = item.MaKhachHang })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

}