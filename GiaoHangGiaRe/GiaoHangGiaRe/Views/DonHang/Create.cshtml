@model Models.EntityModel.DonHang

@{
    ViewBag.Title = "Thêm đơn hàng";
}


<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Thêm đơn hàng</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">Người gửi</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NguoiGui, new { htmlAttributes = new { @class = "form-control" }, required = "required" })
                    @Html.ValidationMessageFor(model => model.NguoiGui, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số điện thoại người gửi</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoDienThoaiNguoiGui, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoDienThoaiNguoiGui, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Địa chỉ gửi</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiGui, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChiGui, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Người nhận</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NguoiNhan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NguoiNhan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số điện thoại người nhận</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoDienThoaiNguoiNhan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoDienThoaiNguoiNhan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Địa chỉ nhận</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiNhan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChiNhan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Ghi chú</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Thành tiền</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" data-val="false" readonly="readonly" data-val-number="The field SoLuong must be a number."
                           id="ThanhTien" name="ThanhTien" type="number" value="100000000">
                    <text>@DateTime.Now</text>
                </div>

            </div>



            @*<div class="form-group">
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" data-val="false" readonly="readonly" data-val-number="The field SoLuong must be a number."
                               id="TinhTrang" name="TinhTrang" type="hidden" value="Đang chờ">
                    </div>
                </div>*@
            @*<div class="form-group">
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" data-val="false" readonly="readonly" data-val-number="The field SoLuong must be a number."
                               id="MaKhachHang" name="MaKhachHang" type="hidden" value="@ViewBag.MaKhachHang">
                    </div>
                </div>*@

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tiếp theo >>" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
